@model WebApplication1.Models.WebViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@if (Model.TotalWordCount > 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-2">Total Words:</div>
            <div class="col-md-5">@Model.TotalWordCount</div>
        </div>
    </div>
}

@if (Model.TopTenWords != null && Model.TopTenWords.Any())
{
    <div class="row">
        <div class="col-md-12">
            <table border="1">
                <tr>
                    <th>Word</th>
                    <th>Count</th>
                </tr>

                @foreach (var item in Model.TopTenWords)
                {
                    <tr>
                        <td>@item.Key</td>
                        <td>@item.Value</td>
                    </tr>
                }
            </table>
        </div>
    </div>
}

@if (Model.Images != null && Model.Images.Any())
{
    <div class="row">

        @foreach (var item in Model.Images)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="@item" style="width:100%">
                </div>
            </div>
        }

    </div>
}